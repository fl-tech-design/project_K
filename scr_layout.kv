        orientation: "vertical"
        padding: 4
        BoxBgTit:
            id: box_tit
            orientation: "vertical"
            padding: 4
            BoxBgApp:
                orientation: "vertical"
                padding: 3
                BoxLgrey:
                    orientation: "horizontal"
                    padding: 3,3,3,0
                    BoxBgTit:
                        BoxBgTit:
                        BoxBgApp:
                            size_hint_x: 0.2
