                                    id: tab_one
                                    font_size: "12sp"
                                    text: "Guides"
                                    on_release:
                                        app.set_app_data("act_cat", "gui")
                                        app.set_app_data("act_scr", "gui_welcome")
                                        app.change_win("scr_one", "right")
                        BoxBgApp:
                            size_hint_x: 0.2
                            padding: 3,0,0,3
                            BoxBgTit:
                                Tab:
                                    id: tab_two
                                    font_size: "12dp"
                                    text: "API-Ref"
                                    on_release:
                                        app.set_app_data("act_cat", "api")
                                        app.set_app_data("act_scr", "api_kivy")
                                        app.change_win("scr_two", "left")
                BoxBgApp:
                    orientation: "horizontal"
                    padding: 3,0,3,3
                    BoxBgTit:
                        size_hint_x: 0.2
